{% trans_default_domain 'FOSUserBundle' %}

{% extends 'AgriwinSiteBundle::layout.html.twig' %}

{% block title %}{{ 'index.page_title'|trans }}{% endblock %}

{% block itempresentation %}
<li class="nav-item active">
{% endblock itempresentation %}

{% block section %}
<div class="index">
    <div class="col-md-12 pt-5">
        <div class="mt-5 pt-2 pb-2 col-sm-3 mx-auto bloc-opacity" style="background-color:rgba(0,0,0,0.5);">
            <h1 class="text-center text-white font-weight-bold">AGRIWIN®</h1>
            <h4 class="text-center text-white">{{ 'index.principal_title'|trans }}</h4>
        </div>
    </div>
    <div class="container mt-4 mb-5">
        <h2 class="border-bottom pb-1" style="color:#c77911;border-bottom-color:#c77911 !important;">TÉLÉGONFLAGE AGRIWIN®</h2>
        <h4 class="text-dark mt-4 intro pl-1">{{ 'index.first_title'|trans|raw }}</h4>
        <div class="mt-4 text-dark">
            {{ 'index.first_bloc'|trans|raw }}
        </div>
    </div>
    <div class="grey pt-4 pb-5">
        <div class="container">
            <div class="first">
                <img src="{{ asset('images/contenu/exemple-alerte-patinage.png') }}" alt="Illustration Télégonflage - CTIS" />
                <div class="col-sm-6">
                    {{ 'index.second_bloc'|trans|raw }}
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4 mb-5">
        <h4 class="text-dark mt-4 intro pl-1">{{ 'index.three_title'|trans }}</h4>
        <div class="d-flex justify-content-between three">
            <div class="col-sm-6 mt-5 bloc-video">
                <div class="stickers d-flex justify-content-between">
                    <img src="{{ asset('images/contenu/qualites-agriwin-presentation.png') }}" alt="Agriwin - Made in France" />
                    <img src="{{ asset('images/contenu/qualites-agriwin-presentation-2.png') }}" alt="Testé approuvé" />
                    <img src="{{ asset('images/contenu/qualites-agriwin-presentation-3.png') }}" alt="Agriwin - Brevet déposé" />
                </div>
                <div class="video mt-5">
                    <iframe src="https://www.youtube.com/embed/JUbzNQSc-bw" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                </div>
            </div>
            <div class="col-sm-4 img-presentation">
                <img src="{{ asset('images/contenu/telegonflage-img-1.jpg') }}" alt="" />
                <img class="mt-3" src="{{ asset('images/contenu/telegonflage-img-2.jpg') }}" alt="" />
                <img class="mt-3" src="{{ asset('images/contenu/telegonflage-img-3.jpg') }}" alt="" />
            </div>
        </div>
    </div>
</div>
{% endblock section %}