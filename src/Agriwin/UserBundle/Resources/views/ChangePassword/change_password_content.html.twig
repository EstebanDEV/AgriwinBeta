{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
    <h2 class="border-bottom pb-1 mt-4" style="color:#c77911;border-bottom-color:#c77911 !important;">Changement de mot de passe</h2>
    <div class="form-group mt-4">
        {% if form_errors(form.current_password) %}
        <div class="alert alert-danger pb-0">{{ form_errors(form.current_password) }}</div>
        {% endif %}
        {{ form_label(form.current_password, "Mot de passe actuel") }}
        {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {% if form_errors(form.plainPassword.first) %}
        <div class="alert alert-danger pb-0">{{ form_errors(form.plainPassword.first) }}</div>
        {% endif %}
        {{ form_label(form.plainPassword.first, "Nouveau mot de passe") }}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.plainPassword.second, "Retapez à nouveau") }}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
    </div>
    {% if form_errors(form.captchaCode) %}
    <div class="alert alert-danger pb-0">{{ form_errors(form.captchaCode) }}</div>
    {% endif %}
    <div class="form-group col-md-4 captcha">
        {{ form_label(form.captchaCode, "Réécrivez les caractères ci-dessous : *") }}
        {{ form_widget(form.captchaCode, {'attr': {'class': 'form-control mt-2'}}) }}
    </div>
    <div class="d-flex">
        <input type="submit" class="btn btn-dark" value="{{ 'change_password.submit'|trans }}" />
        <a class="align-self-end ml-3" style="color:#c77911;" href=" {{ path('fos_user_profile_edit') }} "><< Retour</a>
    </div>
{{ form_end(form) }}
</div>