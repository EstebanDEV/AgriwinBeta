{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container">
<form action="{{ path("fos_user_security_check") }}" method="post" class="mt-4" >
    {% if csrf_token %}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">{{ 'profile.show.email'|trans }}</label>
        <div class="col-sm-4">
            <input type="email" class="form-control form-control-sm"  id="email" name="_username" required="required" autocomplete="email" />
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label">{{ 'security.login.password'|trans }}</label>
        <div class="col-sm-4">
            <input type="password" class="form-control form-control-sm"  id="password" name="_password" required="required" autocomplete="current-password" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">
            <input type="submit" class="btn btn-dark" style="width:100%;" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>
    </div>
</form>
</div>
